{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "frameflow",
  "version": "0.1.0",
  "identifier": "com.frameflow.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "FrameFlow",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "splash",
        "title": "Loading FrameFlow...",
        "url": "/splash.html",
        "width": 400,
        "height": 300,
        "decorations": false,
        "center": true,
        "resizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' frameflow: blob: data: filesystem: ws: http: https:; img-src 'self' frameflow: blob: data: https:; media-src 'self' frameflow: blob: data: https:; connect-src 'self' ws: http: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/MrJc01/crom-frameflow/releases/latest/download/update.json"
      ],
      "pubkey": ""
    }
  }
}
